---
const base = import.meta.env.BASE_URL;

const navLinks = [
  { href: `${base}`, label: 'Home' },
  { href: `${base}diy-guide`, label: 'DIY Guide' },
  { href: `${base}app`, label: 'App' },
  { href: `${base}get-one`, label: 'Get One' },
];

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-100 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={base} class="text-xl font-bold text-primary">GasTag</a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors',
              currentPath === link.href ? 'text-primary' : 'text-gray-600 hover:text-primary'
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <a
        href={`${base}app`}
        class="hidden md:inline-flex items-center px-4 py-2 bg-primary text-white text-sm font-medium rounded-lg hover:bg-primary/90 transition-colors"
      >
        Get the App
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-600 hover:text-primary"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-white">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block text-sm font-medium py-2',
            currentPath === link.href ? 'text-primary' : 'text-gray-600'
          ]}
        >
          {link.label}
        </a>
      ))}
      <a
        href={`${base}app`}
        class="block w-full text-center px-4 py-2 bg-primary text-white text-sm font-medium rounded-lg mt-4"
      >
        Get the App
      </a>
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
